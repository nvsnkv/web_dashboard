<UserControl x:Class="Dashboard.Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Dashboard.Client.Views"
    xmlns:visualTreeViewer="clr-namespace:VisualTreeViewer;assembly=VisualTreeViewer"
    mc:Ignorable="d"
    d:DesignHeight="360" d:DesignWidth="640"
             Loaded="MainPage_OnLoaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <views:DashboardView x:Name="LayoutRoot" DataContext="{Binding Dashboard}" Grid.Column="0"/>
        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="5" Padding="5" MinHeight="150" MinWidth="300">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <visualTreeViewer:VisualTreeViewer  x:Name="TreeViewer"/>
                <Button Grid.Row="1" Click="ButtonBase_OnClick">Get Tree!</Button>
            </Grid>
        </Border>
        
    </Grid>
</UserControl>
