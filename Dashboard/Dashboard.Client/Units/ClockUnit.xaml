<units:Unit x:Class="Dashboard.Client.Units.ClockUnit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:units="clr-namespace:Dashboard.Client.Units"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400"
    >
    
    <TextBlock Foreground="Orange" HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontSize="30" Text="{Binding CurrentTime}" />
    
</units:Unit>
